    <script type="text/javascript"> 

      $(document).ready(function() {

        loadSection('File Report', 'section-view-map', true);
      
      var animationSpeed = 300;
      
        $(".tabs li").bind("click", function() {
          $(this).parent().children("li").removeClass("active");
          $(this).addClass("active");
           //parent().children("li").stop().fadeTo(animationSpeed,1);
        });   

      //Top menu button animations
        $(".but1").bind("mouseenter", function() {
          $(this).children(".over").stop().fadeTo(animationSpeed,1);
        });
        
        $(".but1").bind("mouseleave", function() {
          $(this).children(".over").stop().fadeTo(animationSpeed,0);
        });
        
        $(".but1").bind("mousedown", function() {
          $(this).children(".down").stop().fadeTo(0,1);
        });
        
        $(".but1").bind("mouseup", function() {
          $(this).children(".down").stop().fadeTo(animationSpeed,0);
        });
      
      });
      
    //returns html for a top level button
      function addButton(strName, strID) {
        var tH = [];
        
        tH.push("<div class='but1' onclick=\"loadSection('"+strName+"', '"+strID+"', false)\">");
          tH.push("<div class='but1 over' style='display:none;'>");
          
          tH.push("</div>");
          tH.push("<div class='but1 down' style='display:none;'>");
          
          tH.push("</div>");
          
          tH.push("<div class='but1text'>"+strName+"</div>");
          tH.push("<div class='but1icon' style=\"background-image:url('/assets/icon-"+String(strName).toLowerCase()+".png')\"></div>");
        tH.push("</div>");
        
        return tH.join("");
      }
      
      var crumbString = "";
      var currentSection;
      function loadSection(strName, strID, boolClearCrumbs) {
        
        if(currentSection == strID) {
          return false;
        }
        
        if(boolClearCrumbs || strName == "home") {
          crumbString = "<div onclick=\"loadSection('"+strName+"','"+strID+"',"+boolClearCrumbs+");\"><img src='/assets/icon-home.png' /></div>";
        }
        //if(strName != "home") {
          crumbString = crumbString  + "<div onclick=\"loadSection('"+strName+"','"+strID+"',"+boolClearCrumbs+");\">" + strName + " > </div>"
        //};
        
        $("#breadCrumbs").html(crumbString);
        
        $(".mid1").hide();
        $("#"+strID).show();
        currentSection = strID;
      };
      
    </script>
